	@RequestMapping(method = RequestMethod.POST, value = "/updatepwd")
	@Transactional(propagation=Propagation.REQUIRED,rollbackFor=Exception.class)
	public void updatepwd(HttpSession session,HttpServletRequest request,HttpServletResponse response){
		AccountInfo ai=(AccountInfo) session.getAttribute("loginEmp");
		String password=request.getParameter("password");
		String newpassword=request.getParameter("newpassword");
		String newpassword1=request.getParameter("newpassword1");
		
		if(!ai.getPassword().equals(password)){
			JsonUtil.success2page(response, "{\"status\":\"-3\",\"info\":\"原密码错误\"}");
			return;
		}
		if(!newpassword.equals(newpassword1)){
			JsonUtil.success2page(response, "{\"status\":\"-3\",\"info\":\"两次输入的密码不一致\"}");
			return;
		}
		ai.setPassword(newpassword);
		databaseHelper.updateObject(ai);
		session.removeAttribute("loginEmp");
		JsonUtil.success2page(response, "{\"status\":\"1\",\"info\":\"\"}");
		
	}
